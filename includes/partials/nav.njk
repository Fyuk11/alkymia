<!-- partials/nav.njk -->
<nav class="nav nav--alkymia">
  <div class="nav__inner container">
    <!-- Brand Alkymia con Logo -->
    <a class="nav__brand" href="/">
      <div class="nav__brand-content">
        <!-- Logo dinámico -->
        {% if landing.logo %}
          <img src="{{ landing.logo }}" alt="Alkymia" class="nav__logo-image">
        {% else %}
          <!-- Fallback temporal -->
          <div class="nav__logo-icon">⚗️</div>
        {% endif %}
        <span class="nav__logo-text">ALKYMIA</span>
      </div>
    </a>

    <!-- Burger toggle (mobile) - CON 3 BARRAS -->
    <button class="nav__toggle" aria-label="Abrir menú">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <!-- Menú -->
    <ul class="nav__menu" id="navMenu">
      {% if landing.nav %}
        {% for item in landing.nav %}
          <li class="nav__item">
            <a 
              href="{{ item.url }}" 
              class="nav__link"
              {% if item.external %}target="_blank" rel="noopener"{% endif %}
            >
              {{ item.text }}
              {% if item.external %}
                <i class="fas fa-external-link-alt nav__external"></i>
              {% endif %}
            </a>
          </li>
        {% endfor %}
      {% else %}
        <!-- Fallback con las secciones de tu landing -->
        <li class="nav__item"><a href="#hero" class="nav__link">Inicio</a></li>
        <li class="nav__item"><a href="#servicios-detallados" class="nav__link">Servicios</a></li>
        <li class="nav__item"><a href="#proceso-alquimico" class="nav__link">Proceso</a></li>
        <li class="nav__item"><a href="#portfolio" class="nav__link">Portfolio</a></li>
        <li class="nav__item"><a href="#casos-reales" class="nav__link">Casos</a></li>
        <li class="nav__item">
          <a href="https://wa.me/5491121652703" class="nav__link nav__link--cta" target="_blank">
            <i class="fab fa-whatsapp"></i>
            Contactar
          </a>
        </li>
      {% endif %}
    </ul>
  </div>
</nav>