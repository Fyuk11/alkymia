<section id="benefits" class="benefits">
  <div class="container">
    <h2>{{ section_data.title }}</h2>
    <p class="subtitle">{{ section_data.subtitle }}</p>
    
    <div class="benefits-grid">
      {% for benefit in section_data.items %}
        <div class="benefit-card">
          {% if benefit.icon %}
            <img src="{{ benefit.icon }}" alt="{{ benefit.title }} icon" class="benefit-icon">
          {% endif %}
          <h3>{{ benefit.title }}</h3>
          <p>{{ benefit.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
