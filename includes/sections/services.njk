<section id="services" class="services">
  <div class="container">
    <h2>{{ section_data.title or "Nuestros Servicios" }}</h2>
    <p class="subtitle">{{ section_data.subtitle or "Transformamos tu negocio en digital" }}</p>

    <div class="services-grid">
      {% for service in section_data.services %}
        <div class="service-card">
          {% if service.icon %}
            <img src="{{ service.icon }}" alt="{{ service.title }} icon" class="service-icon">
          {% endif %}
          <h3>{{ service.title }}</h3>
          <p>{{ service.description }}</p>

          {% if service.plans %}
            <div class="plans-grid">
              {% for plan in service.plans %}
                <div class="plan-card">
                  <h4>{{ plan.name }}</h4>
                  <p>{{ plan.details }}</p>
                  <span class="plan-products">{{ plan.products }} productos</span>
                </div>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
