<section class="about" id="about">
  <div class="container about__grid">
    
    <div class="about__image-wrapper">
      <div class="about__image-container">
        <img src="{{ section_data.image }}" alt="{{ section_data.title }}" class="about__image">
        <div class="about__image-overlay"></div>
      </div>
      <div class="about__floating-card">
        <span class="about__floating-number">{{ section_data.floating.number }}</span>
        <span class="about__floating-label">{{ section_data.floating.label }}</span>
      </div>
    </div>

    <div class="about__content">
      <span class="about__badge">{{ section_data.badge }}</span>
      <h2 class="about__title">{{ section_data.title }}</h2>
      <p class="about__description">{{ section_data.description }}</p>

      <ul class="about__benefits">
        {% for benefit in section_data.benefits %}
        <li class="about__benefit">
          <svg class="about__benefit-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
              d="M5 13l4 4L19 7"/>
          </svg>
          <span class="about__benefit-text">{{ benefit }}</span>
        </li>
        {% endfor %}
      </ul>

      <div class="about__cta">
        <a href="{{ section_data.cta.url }}" class="btn btn--primary">{{ section_data.cta.text }}</a>
      </div>
    </div>
    
  </div>
</section>
