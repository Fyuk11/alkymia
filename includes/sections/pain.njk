<section id="pain" class="pain">
  <div class="container">
    <h2>{{ section_data.title }}</h2>
    <p class="subtitle">{{ section_data.subtitle }}</p>

    <div class="pain-items">
      {% for item in section_data.items %}
        <div class="pain-card">
          {% if item.icon %}
            <img src="{{ item.icon }}" alt="{{ item.title }} icon" class="pain-icon">
          {% endif %}
          <h3>{{ item.title }}</h3>
          <p>{{ item.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
