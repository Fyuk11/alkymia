<section id="pain" class="pain">
  <div class="container">
    <h2 class="pain__title">{{ section_data.title }}</h2>
    <p class="pain__subtitle">{{ section_data.subtitle }}</p>

    <div class="pain-items">
      {% for point in section_data.points %}
        <div class="pain-card animate-on-scroll fade-up">
          <h3>{{ point.title }}</h3>
          <p>{{ point.description }}</p>
        </div>
      {% endfor %}
    </div>

    {% if section_data.cta_text and section_data.cta_button %}
      <div class="pain__cta animate-on-scroll fade-up">
        <p>{{ section_data.cta_text }}</p>
        <a href="{{ section_data.cta_link }}" class="btn btn-primary">{{ section_data.cta_button }}</a>
      </div>
    {% endif %}
  </div>
</section>
