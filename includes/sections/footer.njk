<footer id="footer" class="footer">
  <canvas id="footerParticles" class="footer-particles"></canvas>

  <div class="container footer__grid">
    
    <div class="footer__copy">
      <p>{{ section_data.text or "Â© 2025 Alkymia. Todos los derechos reservados." }}</p>
      <span class="footer__email">{{ section_data.email or "contacto@alkymia.digital" }}</span>
    </div>

    <ul class="footer__menu">
      {% for link in section_data.links %}
        <li><a href="{{ link.url }}">{{ link.text }}</a></li>
      {% endfor %}
    </ul>

    <div class="footer__social">
      {% for s in section_data.social %}
        {% if s.type == "instagram" %}
          <a href="{{ s.url }}" target="_blank" rel="noopener" class="btn-social instagram">
            <i class="fab fa-instagram"></i>
          </a>
        {% endif %}
        {% if s.type == "whatsapp" %}
          <a href="{{ s.url }}" target="_blank" rel="noopener" class="btn-social whatsapp">
            <i class="fab fa-whatsapp"></i>
          </a>
        {% endif %}
      {% endfor %}
    </div>

  </div>
</footer>

