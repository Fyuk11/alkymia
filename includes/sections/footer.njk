<!-- sections/footer.njk -->
<footer id="footer" class="footer">
  <div class="container">
    <!-- Main Footer Content -->
    <div class="footer__main">
      <!-- Brand Column -->
      <div class="footer__brand">
        <div class="footer__logo">
          <span class="logo-text">{{ section_data.logo_text }}</span>
        </div>
        <p class="footer__tagline">{{ section_data.tagline }}</p>
        <p class="footer__description">{{ section_data.description }}</p>
        
        <!-- Social Links -->
        <div class="footer__social">
          {% for social in section_data.social %}
          <a href="{{ social.url }}" class="social-link" target="_blank" aria-label="{{ social.plataforma }}">
            <i class="{{ social.icon }}"></i>
          </a>
          {% endfor %}
        </div>
      </div>

      <!-- Links Columns -->
      <div class="footer__links">
        {% for grupo in section_data.links %}
        <div class="footer__column">
          <h4 class="footer__column-title">{{ grupo.grupo }}</h4>
          <ul class="footer__links-list">
            {% for item in grupo.items %}
            <li class="footer__link-item">
              <a href="{{ item.url }}" class="footer__link">{{ item.text }}</a>
            </li>
            {% endfor %}
          </ul>
        </div>
        {% endfor %}
      </div>

      <!-- Contact Column -->
      <div class="footer__contact">
        <h4 class="footer__column-title">¿Listo para comenzar?</h4>
        <div class="contact-info">
          <div class="contact-item">
            <i class="fas fa-envelope contact-icon"></i>
            <a href="mailto:{{ section_data.contact.email }}" class="contact-value">{{ section_data.contact.email }}</a>
          </div>
          
          <div class="contact-item">
            <i class="fab fa-whatsapp contact-icon"></i>
            <a href="https://wa.me/5491160184124" class="contact-value" target="_blank">{{ section_data.contact.whatsapp }}</a>
          </div>
        </div>
        
        <!-- CTA pequeño -->
        <a href="https://wa.me/5491121652703" class="footer-cta" target="_blank">
          <span>Consulta gratuita</span>
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer__bottom">
      <div class="footer__legal">
        <p class="footer__copyright">{{ section_data.legal.copyright }}</p>
      </div>
    </div>
  </div>
</footer>