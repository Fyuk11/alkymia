<!-- sections/para-quien-es.njk -->
<section id="para-quien-es" class="para-quien-es">
  <div class="container">
    <div class="para-quien-es__header">
      <h2 class="para-quien-es__title">{{ section_data.title }}</h2>
      <p class="para-quien-es__subtitle">{{ section_data.subtitle }}</p>
    </div>

    <div class="para-quien-es__grid">
      {% for punto in section_data.puntos %}
      <div class="punto-card">
        <div class="punto-card__icon">{{ punto.icon }}</div>
        <h3 class="punto-card__title">{{ punto.titulo }}</h3>
        <p class="punto-card__desc">{{ punto.descripcion }}</p>
      </div>
      {% endfor %}
    </div>

    <div class="para-quien-es__cta">
      <p class="cta-text">¿Te sentís identificado con alguno de estos puntos?</p>
      <a href="https://wa.me/5491121652703" class="btn btn--primary" target="_blank">
        <span>Hablemos de tu proyecto</span>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
          <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2"/>
        </svg>
      </a>
    </div>
  </div>
</section>