<section id="hero" class="hero-alkymia" style="background-image: url('{{ section_data.background }}');">
  <div class="hero-container">
    <!-- Texto -->
    <div class="hero-text">
      <h1>{{ section_data.title | safe }}</h1>
      <p>{{ section_data.subtitle }}</p>

      {% if section_data.ctas %}
        <div class="hero-ctas">
          {% for cta in section_data.ctas %}
            <a href="{{ cta.url }}" class="btn-cta" target="_blank">{{ cta.text }}</a>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <!-- Placeholder para media si querÃ©s agregar imagen/video -->
    <div class="hero-media">
      {% if section_data.media %}
        <img src="{{ section_data.media }}" alt="Media Hero" />
      {% endif %}
    </div>
  </div>
</section>
