<section id="hero" class="hero-alkymia">
  <!-- Background Layers -->
  <div class="hero-bg">
    {% if section_data.background %}
      <img src="{{ section_data.background }}" alt="" class="hero-bg__image">
    {% endif %}
    <div class="hero-bg__overlay"></div>
    <div class="hero-bg__particles"></div>
  </div>
  
  <div class="container">
    <div class="hero-content">
      <!-- Text Content -->
      <div class="hero-text">
        <h1 class="hero-title">
          {{ section_data.title | safe }}
        </h1>
        
        <p class="hero-subtitle">
          {{ section_data.subtitle }}
        </p>

        <!-- Stats - Ahora dinámicos desde el .md -->
        {% if section_data.stats %}
        <div class="hero-stats">
          {% for stat in section_data.stats %}
          <div class="stat">
            <div class="stat-number">{{ stat.number }}</div>
            <div class="stat-label">{{ stat.label }}</div>
          </div>
          {% endfor %}
        </div>
        {% endif %}

        <!-- CTAs - Dinámicos desde el .md -->
        <div class="hero-actions">
          {% if section_data.ctas %}
            {% for cta in section_data.ctas %}
              <a href="{{ cta.url }}" 
                 class="btn {% if loop.first %}btn-primary{% else %}btn-secondary{% endif %}"
                 {% if cta.external %}target="_blank" rel="noopener"{% endif %}>
                <span>{{ cta.text }}</span>
                {% if loop.first %}
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                    <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2"/>
                  </svg>
                {% endif %}
              </a>
            {% endfor %}
          {% endif %}
        </div>
      </div>

      <!-- Media Side - Dinámico -->
      <div class="hero-media">
        <div class="media-wrapper">
          <div class="mockup-container">
            {% if section_data.media %}
              <img src="{{ section_data.media }}" alt="Dashboard Alkymia" class="mockup-image">
            {% endif %}
          </div>
        </div>
        
        <!-- Floating Features - Dinámicos -->
        {% if section_data.features %}
        <div class="floating-features">
          {% for feature in section_data.features %}
          <div class="feature-card feature-{{ loop.index }}">
            <div class="feature-icon">{{ feature.icon }}</div>
            <span>{{ feature.text }}</span>
          </div>
          {% endfor %}
        </div>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <span>Descubre más</span>
    <div class="arrow"></div>
  </div>
</section>