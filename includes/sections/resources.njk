<section id="resources" class="section resources">
  <div class="container">
    <h2>{{ section_data.title or "Recursos digitales" }}</h2>
    <p class="subtitle">{{ section_data.subtitle or "Gu√≠as y plantillas para ayudarte a crecer." }}</p>

    <div class="resources-grid">
      {% for item in section_data.items or [] %}
        <div class="resource-card">
          <img src="{{ item.image }}" alt="{{ item.title }}">
          <h3>{{ item.title }}</h3>
          <p>{{ item.description }}</p>

          {% if item.gumroad_url %}
            <a href="{{ item.gumroad_url }}" class="btn btn-primary" target="_blank">
              {{ item.cta_text or "Comprar en Gumroad" }}
            </a>
          {% elseif item.download_url %}
            <a href="{{ item.download_url }}" class="btn btn-secondary" download>
              {{ item.cta_text or "Descargar gratis" }}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
